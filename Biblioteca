using System;
using System.Diagnostics;
using System.Runtime.Serialization;

namespace Exer2 // nome do arquivo
{
    public class Caculadora
    {
        public static double soma(double n1, double n2)
        {
            double resp;
            resp = n1 + n2;
            return resp;
        }//soma
        public static double divisao(double n1, double n2)
        {
            if (n2 == 0)
            {
                return 0;
            }
            return n1 / n2;
        }//divisao
        public static double mutipli(double n1, double n2)
        {
            double resp;
            resp = n1 * n2;
            return resp;
        }//mutiplicação
        public static double subt(double n1, double n2)
        {
            double resp;
            resp = n1 - n2;
            return resp;
        }

    }
}
